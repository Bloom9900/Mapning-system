{
  "name": "security-framework-mapping-tool",
  "version": "1.0.0",
  "description": "Mapping tool for CIS Controls, ISO 27001, and NIS2 Directive",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "export-data": "npm run export-data --workspace=backend",
    "build": "npm run export-data && npm run build --workspace=frontend",
    "test": "npm run test --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

